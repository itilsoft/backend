{
    "openapi": "3.0.0",
    "info": {
        "title": "Itilsoft API",
        "version": "1.0.0"
    },
    "paths": {
        "/api/comment": {
            "post": {
                "tags": [
                    "comment"
                ],
                "description": "Add comment",
                "requestBody": {
                    "description": "Add comment",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "description",
                                    "star",
                                    "serviceId"
                                ],
                                "properties": {
                                    "description": {
                                        "type": "string"
                                    },
                                    "star": {
                                        "type": "integer"
                                    },
                                    "serviceId": {
                                        "type": "integer"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Add comment"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/service": {
            "get": {
                "tags": [
                    "service"
                ],
                "description": "Get Services",
                "responses": {
                    "200": {
                        "description": "Get Services"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/service/{id}": {
            "get": {
                "tags": [
                    "service"
                ],
                "description": "Get Service By Id",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Service id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Get Service  By Id"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/user/change-password": {
            "post": {
                "tags": [
                    "user"
                ],
                "description": "Change Password",
                "requestBody": {
                    "description": "Change Password",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "oldPassword",
                                    "newPassword"
                                ],
                                "properties": {
                                    "oldPassword": {
                                        "type": "string",
                                        "format": "password"
                                    },
                                    "newPassword": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Change Password"
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/user/login": {
            "post": {
                "tags": [
                    "user"
                ],
                "description": "Login",
                "requestBody": {
                    "description": "Login",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login"
                    }
                }
            }
        },
        "/api/user/register": {
            "post": {
                "tags": [
                    "user"
                ],
                "description": "Register",
                "requestBody": {
                    "description": "Register",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "fullname",
                                    "username",
                                    "password"
                                ],
                                "properties": {
                                    "fullname": {
                                        "type": "string"
                                    },
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Register"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer \"token\")",
                "name": "Authorization",
                "in": "header"
            }
        }
    }
}